<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_bg_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tarantulaImage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Species: "
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSpecies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country of origin: "
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvOrigin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temper: "
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/temperGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/temper1"
                        android:layout_width="26dp"
                        android:layout_height="25dp"
                        android:buttonTint="#FF0000"
                        android:clickable="false"
                        android:text="1"
                        android:textSize="0sp" />

                    <RadioButton
                        android:id="@+id/temper2"
                        android:layout_width="26dp"
                        android:layout_height="25dp"
                        android:buttonTint="#CD4317"
                        android:clickable="false"
                        android:text="2"
                        android:textSize="0sp" />

                    <RadioButton
                        android:id="@+id/temper3"
                        android:layout_width="26dp"
                        android:layout_height="25dp"
                        android:buttonTint="#FF693A"
                        android:clickable="false"
                        android:text="3"
                        android:textSize="0sp" />

                    <RadioButton
                        android:id="@+id/temper4"
                        android:layout_width="26dp"
                        android:layout_height="25dp"
                        android:buttonTint="#FFC107"
                        android:clickable="false"
                        android:text="4"
                        android:textSize="0sp" />

                    <RadioButton
                        android:id="@+id/temper5"
                        android:layout_width="26dp"
                        android:layout_height="25dp"
                        android:buttonTint="#8BC34A"
                        android:clickable="false"
                        android:text="5"
                        android:textSize="0sp" />

                    <RadioButton
                        android:id="@+id/temper6"
                        android:layout_width="26dp"
                        android:layout_height="25dp"
                        android:buttonTint="#00FD0A"
                        android:clickable="false"
                        android:text="6"
                        android:textSize="0sp" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Venom: "
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/venomGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/venom1"
                        android:layout_width="26dp"
                        android:layout_height="25dp"
                        android:buttonTint="#FF0000"
                        android:clickable="false"
                        android:text="1"
                        android:textSize="0sp" />

                    <RadioButton
                        android:id="@+id/venom2"
                        android:layout_width="26dp"
                        android:layout_height="25dp"
                        android:buttonTint="#FFC107"
                        android:clickable="false"
                        android:text="2"
                        android:textSize="0sp" />

                    <RadioButton
                        android:id="@+id/venom3"
                        android:layout_width="26dp"
                        android:layout_height="25dp"
                        android:buttonTint="#00FD0A"
                        android:clickable="false"
                        android:text="3"
                        android:textSize="0sp" />

                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Urticating hairs: "
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/urticatingCheckBox"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:checked="false"
                    android:clickable="false" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
